<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFC107"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hola, mundo!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" /> <!-- Add margin bottom to TextView -->

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click me!" />

        <Button
            android:id="@+id/btn_saludar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saludar"
            android:onClick="capturarEvento" />

        <Button
            android:id="@+id/btn_no_saludar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Saludar"
            android:onClick="capturarEvento" />

        <Button
            android:id="@+id/btn_saludar_clase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saludar a Clase"
            android:onClick="capturarEvento" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

